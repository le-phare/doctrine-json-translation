{
    "name": "lephare/doctrine-json-translation",
    "description": "Store your translations in JSON and use them with Doctrine",
    "type": "library",
    "require": {
        "doctrine/dbal": "^3.0|^4.0",
        "php": "^8.1",
        "symfony/form": "^7.4|^8.0",
        "symfony/options-resolver": "^7.4|^8.0",
        "symfony/validator": "^7.4|^8.0"
    },
    "autoload": {
        "psr-4": {
            "LePhare\\DoctrineJsonTranslation\\": "src"
        }
    },
    "license": "MIT",
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.91",
        "kubawerlos/php-cs-fixer-custom-fixers": "^3.35",
        "phpstan/phpstan": "^2.1",
        "ekino/phpstan-banned-code": "^3.0"
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan --memory-limit=512M analyse --no-progress --configuration phpstan.neon.dist",
        "lint:fix": [
            "./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php"
        ]
    }
}
